{
  "name": "@napi-rs/lzma",
  "version": "1.1.2",
  "description": "https://docs.rs/lzma-rs binding to Node.js via https://napi.rs",
  "napi": {
    "name": "lzma",
    "triples": {
      "additional": [
        "aarch64-apple-darwin",
        "aarch64-linux-android",
        "aarch64-unknown-linux-gnu",
        "aarch64-unknown-linux-musl",
        "aarch64-pc-windows-msvc",
        "armv7-unknown-linux-gnueabihf",
        "arm-linux-androideabi",
        "x86_64-unknown-linux-musl",
        "x86_64-unknown-freebsd",
        "i686-pc-windows-msvc"
      ]
    }
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "keywords": [
    "Node-API",
    "napi",
    "lzma",
    "compress",
    "decompress",
    "xz",
    "napi-rs"
  ],
  "license": "MIT",
  "files": [
    "index.js",
    "index.d.ts",
    "xz.js",
    "xz.d.ts",
    "lzma.js",
    "lzma.d.ts",
    "lzma2.js",
    "lzma2.d.ts"
  ],
  "devDependencies": {
    "@napi-rs/cli": "^2.2.0",
    "@node-rs/deno-lint": "^1.11.0",
    "@swc-node/register": "^1.4.2",
    "@types/lzma-native": "^4.0.1",
    "@types/node": "^17.0.2",
    "ava": "^3.15.0",
    "conventional-changelog-cli": "^2.1.1",
    "esbuild": "^0.14.7",
    "lzma": "^2.3.2",
    "lzma-native": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "typescript": "^4.5.4"
  },
  "engines": {
    "node": ">= 10"
  },
  "scripts": {
    "artifacts": "napi artifacts",
    "build": "napi build --platform --release --pipe \"prettier -w\"",
    "build:debug": "napi build --platform \"prettier -w\"",
    "lint": "denolint .",
    "format": "run-p format:source format:rs",
    "format:rs": "cargo fmt",
    "format:source": "prettier --config ./package.json --write .",
    "prepublishOnly": "napi prepublish -t npm && esbuild --minify --outfile=index.js --allow-overwrite index.js",
    "test": "ava",
    "version": "napi version && conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md"
  },
  "ava": {
    "require": [
      "@swc-node/register"
    ],
    "extensions": [
      "ts"
    ],
    "timeout": "30s",
    "environmentVariables": {
      "SWC_NODE_PROJECT": "./tsconfig.json",
      "NODE_ENV": "ava"
    }
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "always"
  },
  "exports": {
    "./": {
      "import": "./index.js",
      "export": "./index.js"
    },
    "./xz": {
      "import": "./xz.js",
      "require": "./xz.js"
    },
    "./lzma": {
      "import": "./lzma.js",
      "require": "./lzma.js"
    },
    "./lzma2": {
      "import": "./lzma2.js",
      "require": "./lzma2.js"
    }
  }
}
